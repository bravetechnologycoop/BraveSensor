{
  "name": "brave_sensor_server",
  "version": "1.0.0",
  "description": "Backend for the Brave Sensor project.",
  "main": "index.js",
  "scripts": {
    "lint": "eslint .",
    "start": "NODE_ENV=test node index.js",
    "test": "NODE_ENV=test mocha --exit --timeout 10000 'test/**/*.js'",
    "test:unit": "NODE_ENV=test mocha --exit --timeout 10000 'test/unit/**/*.js'",
    "test:integration": "NODE_ENV=test mocha --exit --timeout 10000 --require \"test/mochaFixtures.js\" 'test/integration/**/*.js'",
    "test:coverage": "NODE_ENV=test nyc --reporter=html --reporter=text mocha --exit --timeout 10000 'test/**/*.js'",
    "smoketest": "node test/smokeTest.js"
  },
  "eslintIgnore": [
    "Public/*",
    "lib/*"
  ],
  "dependencies": {
    "@sentry/node": "^6.2.5",
    "@sentry/tracing": "^6.2.5",
    "axios": "^1.12.1",
